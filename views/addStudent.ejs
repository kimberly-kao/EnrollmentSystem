<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta charset="utf-8" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link href="../stylesheets/addStudent.css" rel="stylesheet" />
    </head>
    <!-- This is where a new student can be added to the database -->
    <body>
        <form id="reg-form">
            <div style="margin-top: 5%; margin-bottom: 2%;">
                <center>
                    <img src="/images/zoom_logo.png" width="400" height="400"/>
                    <h1>Application Submision</h1>
                </center>
                
            </div>
            <div class="col" >
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col" colspan="4"><center>Personal Information</center></th>
                            </tr>
                        </thead>
                        <thead>
                            <tr>
                                <th colspan="2">Applicant ID</th>
                                <th colspan="2">Submission Date & Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2"></td>
                                <td colspan="2"></td>
                            </tr>
                        </tbody>
                        <thead>
                            <tr>
                                <th>First</th>
                                <th>Middle</th>
                                <th>Last</th>
                                <th>Gender</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="attribute studentAns">
                                        <input type="text" id="fname" placeholder="Buck" />
                                    </div>
                                </td>
                                <td>
                                    <div class="attribute studentAns">
                                        <input type="text" id="mname" placeholder="N/A" />
                                        
                                    </div>
                                </td>
                                <td>
                                    <div class="attribute studentAns">  
                                        <input type="text" id="lname" placeholder="Beak" />
                                        
                                    </div>
                                </td>
                                <td>
                                    <div class="attribute studentAns">
                                        <input type="text" id="gender" placeholder="Griffen" />
                                        
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <thead>
                            <tr>
                                <th colspan="2">Username</th>
                                <th colspan="2">Password</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2">
                                    <div class="attribute studentAns">
                                        <input type="text" id="username" placeholder="BBeak" />
                                    </div>
                                </td>
                                <td colspan="2">
                                    <div class="attribute studentAns">
                                        <input type="text" id="password" placeholder="asud7" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <thead>
                            <tr>
                                <th colspan="2">Birthday</th>
                                <th colspan="2">Military Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2">
                                    <div class="attribute studentAns">
                                        <input type="text" id="bday" placeholder="05-14-1908" />
                                    </div>
                                </td>
                                <td colspan="2">
                                    <div class="attribute studentAns">
                                        <input type="text" id="militaryStatus" placeholder="Vetran" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col" colspan="2"><center>Applicant Contact Information</center></th>
                            </tr>
                        </thead>
                        <thead>
                            <tr>
                                <th>Telephone Number</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="attribute studentAns">
                                        <input type="text" id="telephone" placeholder="Enter telephone here" />
                                    </div>
                                </td>
                                <td>
                                    <div class="attribute studentAns">
                                        <input type="text" id="email" placeholder="Enter email here" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <thead>
                            <tr>
                                <th colspan="2">Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2">
                                    <div class="attribute studentAns">
                                        <input type="text" id="address" placeholder="2 Great Tree Ln, Giant Forest OR, 00000" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col" colspan="2"><center>Application Information</center></th>
                            </tr>
                        </thead>
                        <thead>
                            <tr>
                                <th colspan="2">Acceptance Semester</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2">
                                    <div class="attribute studentAns">
                                        <input type="text" id="semester" placeholder="Winter 2021" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <thead>
                            <tr>
                                <th>Degree Type</th>
                                <th>Major</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="attribute studentAns">
                                        <input type="text" id="degree" placeholder="Graduate" />
                                    </div>
                                </td>
                                <td>
                                    <div class="attribute studentAns"> 
                                        <input type="text" id="major" placeholder="Mathamatics" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col" colspan="2"><center>Most Recent Schooling</center></th>
                            </tr>
                        </thead>
                        <thead>
                            <tr>
                                <th>School Name</th>
                                <th>School Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="attribute studentAns">
                                        <input type="text" id="school" placeholder="Griffen's Finishing School" />
                                    </div>
                                </td>
                                <td>
                                    <div class="attribute studentAns">
                                        <input type="text" id="schoolAdd" placeholder="6 Forest, Giant Forest OR, 00000" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col" colspan="4"><center>Required Documents</center></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">Transcript</th>
                                <td colspan="3">
                                    <div class="attribute"  style="padding-bottom: 10px;">
                                        <input type="text" id="transcript" placeholder="https://docs.google.com/document/d/1MPHyAbpfC4Mq9bWkezy4G6V5262dQ0HCzl28P6826jc/edit" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Test Scores</th>
                                <td colspan="3">
                                    <div class="attribute" style="padding-bottom: 10px;">
                                        <input type="text" id="testScore" placeholder="https://docs.google.com/document/d/1pzOv8OMS0acgiVu28_1cTKTJO1Ineu1SkJTAoDG_Jrk/edit" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Letters of Recommendation</th>
                                <td colspan="3">
                                    <div class="attribute"  style="padding-bottom: 10px;">
                                        <input type="text" id="letters" placeholder="https://docs.google.com/document/d/1VQ-YJVKhDFvK8hGpNgktAsB87VE5lbWcwS1den6X-pY/edit" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Extracurriculars</th>
                                <td colspan="3">
                                    <div class="attribute" style="padding-bottom: 10px;" >
                                        <input type="text" id="extraC" placeholder="https://docs.google.com/document/d/1HjW0Zi0AYX_ajA16zAQaPKAR8zjRsUagIDvNvZUMd5o/edit" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Personal Insight Questions</th>
                                <td colspan="3">
                                    <div class="attribute" style="padding-bottom: 10px;" >
                                        <input type="text" id="piq" placeholder="https://docs.google.com/document/d/1JCZYKmH5wvVK4DYMVs3X3vZ5wvR2y5Q49vfZIrmHILU/edit" />
                                    </div>
                                </td>
                            </tr>    
                        </tbody>
                    </table>
                </div>
                        
                <div class="col-4 col-md-auto attribute" id="studentBtn" style="margin-bottom: 20px;">
                    <center>
                        <!-- The submit button, this will likely need to be linked to the create student route -->
                        <div id="buttons">
                            <input type="submit" class="btn btn-primary btn-lg" value="SubmitForm" />
                        </div>
                    </center>
                    
                </div>
            
            </div>
        </form>
           
        <script>
            const form = document.getElementById('reg-form')
            form.addEventListener('submit', registerUser)

            async function registerUser(event){
                event.preventDefault()
                await db.collection('Student').insertOne({
                    Username: document.getElementById('username').value,
                    Password: document.getElementById('password').value,
                    FirstName: document.getElementById('password').value,
                    LastName: document.getElementById('password').value,
                    MiddleName: document.getElementById('password').value,
                    Birthday: document.getElementById('password').value,
                    Gender: document.getElementById('password').value,
                    StudentAddress: document.getElementById('password').value,
                    Semester: document.getElementById('password').value,
                    SAT: document.getElementById('password').value,
                    Major: document.getElementById('password').value,
                    StudentEmail: document.getElementById('password').value,
                    DegreeType: document.getElementById('password').value,
                    MilitaryStatus: document.getElementById('password').value,
                    PreviousSchool: document.getElementById('password').value,
                    PreviousSchoolAddress: document.getElementById('password').value,
                    ApplicationStatus: document.getElementById('password').value,
                    Telephone: document.getElementById('password').value,
                    SubmissionDateTime: document.getElementById('password').value,
                    Transcripts: document.getElementById('password').value,
                    APScores: document.getElementById('password').value,
                    LetterOfRec: document.getElementById('password').value,
                    Extracurricular: document.getElementById('password').value,
                    PIQ: document.getElementById('password').value
                });
                
            }
        </script>
    </body>
</html>