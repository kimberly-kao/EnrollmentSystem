        <link href="../stylesheets/addStudent.css" rel="stylesheet" />
    </head>
    <!-- This is where a new student can be added to the database -->
    <body>
        <div class="content">
            <div class="container">
                <form id="reg-form">
                    <div class="row">
                    
                        <div class="col">
